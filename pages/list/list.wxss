/* pages/list/list.wxss */
.container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 26rpx;
  border-top: solid 1rpx #eee;
}

.search-wrap{
  position: fixed;
  top: 0;
}

.list{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.list .item{
  position: relative;
  height: 88rpx;
  border-bottom: solid 1px #eee;
  padding: 20rpx 0;
  margin: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.hot{
  display: flex;
  height: 80rpx;
  width: 70rpx;
  border: solid 1px #aaa;
  border-radius: 5px;
  margin-right: 30rpx;
  color: #888;
  text-align: left;
  flex-direction: column;
  align-items: center;
}
.list-content{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
}
.title{
  font-size: 28rpx;
}
.detail{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 20rpx;
  color: #888;
}

.name{
  margin-right: 15rpx;
}
.name::after{
  content: '.';
  padding-left: 10rpx;
}

.date{
  margin-right: 15rpx;
}

.time{
  margin-right: 15rpx;
}

.start-btn{
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 15rpx;
  color: white;
  text-align: center;
  vertical-align: middle;
  border-radius: 5px;
}
.red{
  background: red;
}
.green{
  background: #73B567;
}
.cost-text{
  font-size: 18rpx;
}
